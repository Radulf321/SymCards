{
    "card": "${card}",
    "cost": {
        "cash": "${cost}"
    },
    "dialog": [
        {
            "id": "${card}",
            "type": "reward",
            "rewards": [
                {
                    "type": "card",
                    "card": "${card}"
                }
            ]
        },
        {
            "type": "select",
            "showUI": true,
            "selectType": "Buttons",
            "title": {
                "en": "Buy more?",
                "de": "Noch mehr kaufen?"
            },
            "options": [
                {
                    "title": {
                        "en": "Buy another card",
                        "de": "Noch eine Karte kaufen"
                    },
                    "cost": {
                        "cash": "${cost}"
                    },
                    "dialog": {
                        "type": "jump",
                        "target": "${card}"
                    }
                },
                {
                    "title": {
                        "en": "Do not buy any more cards",
                        "de": "Keine weiteren Karten kaufen"
                    }
                }
            ]
        }
    ]
}