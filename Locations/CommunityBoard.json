{
    "id": "communityBoard",
    "action": {
        "title": {
            "en": "Community Board",
            "de": "Community Forum"
        },
        "description": {
            "en": "Spend some time in the community board and talk with other users, profiting from their <b>creativity</b>.",
            "de": "Verbringe Zeit im Community Forum um mit anderen Benutzern zu reden und von deren <b>Kreativität</b> zu profitieren."
        },
        "image": "CommunityBoard"
    },
    "dialog": [
        {
            "type": "image",
            "background": "CommunityBoard"
        },
        {
            "type": "condition",
            "condition": {
                "type": "flag",
                "key": "communityBoardVisited",
                "value": true
            },
            "if": [
                {
                    "type": "random",
                    "dialogs": [
                        [
                            {
                                "type": "text",
                                "text": {
                                    "en": "You: Ah, one of the developers commented and explained how the counter aggregation is working",
                                    "de": "Du: Ah, einer von den Entwicklern hat kommentiert und erklärt wie die Zähleraggregation funktioniert"
                                }
                            },
                            {
                                "type": "text",
                                "text": {
                                    "en": "You: It's really nice to see them so active here",
                                    "de": "Du: Es ist wirklich gut zu sehen wie aktiv die hier sind"
                                }
                            }
                        ],
                        [
                            {
                                "type": "text",
                                "text": {
                                    "en": "You: There's a new version of the Energy Manager with even more flexibility. I should give that a try.",
                                    "de": "Du: Es gibt eine neue Version vom Energie Manager mit noch mehr Flexibilität. Ich sollte das mal ausprobieren."
                                }
                            },
                            {
                                "type": "text",
                                "text": {
                                    "en": "You: That will be useful for a lot of upcoming costumer orders...",
                                    "de": "Du: Das wird für einige kommende Kundenaufträge hilfreich sein..."
                                }
                            }
                        ]
                    ]
                }
            ],
            "else": [
                {
                    "type": "text",
                    "text": {
                        "en": "You: Ah, this is the Community Board that Pio mentioned. Let's create an account!",
                        "de": "Du: Ah, das ist das Community Forum, dass Pio erwähnt hat. Ich erstelle am besten mal ein Konto!"
                    }
                },
                {
                    "type": "text",
                    "text": {
                        "en": "You: User name... Symcon License... E-Mail... All right, that should be it",
                        "de": "Du: Benutzername... Symcon-Lizenz... E-Mail... Alles klar, das sollte es sein"
                    }
                },
                {
                    "type": "text",
                    "text": {
                        "en": "You: Let's see what awaits us here",
                        "de": "Du: Dann schauen wir mal, was uns hier erwartet"
                    }
                },
                {
                    "type": "flag",
                    "key": "communityBoardVisited",
                    "value": true
                },
                {
                    "type": "condition",
                    "condition": {
                        "type": "not",
                        "condition": {
                            "type": "flag",
                            "key": "communityBoardTutorialDone",
                            "value": true
                        }
                    },
                    "if": [
                        {
                            "type": "text",
                            "text": {
                                "en": "You: Oh, I'm already getting a message. It's from Pio:",
                                "de": "Du: Oh, ich bekomme schon eine Nachricht. Sie ist von Pio:"
                            }
                        },
                        {
                            "type": "image",
                            "left": {
                                "image": "PioTutorial",
                                "alignment": "center"
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: Hi, I see you found the community board. It's a great place to exchange ideas and get help from other users.",
                                "de": "Pio: Hi, ich sehe du hast das Community Forum gefunden. Es ist ein großartiger Ort um Ideen auszutauschen und Hilfe von anderen Benutzern zu bekommen."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: Here, you can get all kinds of cards that revolve around Creativity.",
                                "de": "Pio: Hier kannst du alle Arten von Karten bekommen, die sich um Kreativität drehen."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: New cards cost SymCoins, which you can earn by completing customer jobs. But there's also a free card available.",
                                "de": "Pio: Neue Karten kosten SymCoins, die du durch das Abschließen von Kundenaufträgen verdienen kannst. Aber es gibt auch eine kostenlose Karte."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: You can even purchase a relic. A relic is a special type of card.",
                                "de": "Pio: Du kannst sogar ein Relikt kaufen. Ein Relikt ist eine spezielle Art von Karte."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: Unlike regular cards, relics are immediately played at the beginning of a customer job and provide a powerful buff.",
                                "de": "Pio: Im Gegensatz zu normalen Karten werden Relikte sofort zu Beginn eines Kundenauftrags gespielt und bieten einen mächtigen Bonus."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: However, they are also quite expensive. So think about whether the SymCoins are worth it.",
                                "de": "Pio: Im Gegenzug sind sie auch recht teuer. Überlege also, ob sich die SymCoins dafür lohnen."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: You can recognize relics by the fact that instead of the energy symbol in the top right corner, the Symcon logo is shown.",
                                "de": "Pio: Du kannst Relikte übrigens daran erkennen, dass an Stelle der Kosten oben rechts statt dem Energiesymbol das Symcon-Logo gezeigt wird."
                            }
                        },
                        {
                            "type": "text",
                            "speaker": "left",
                            "text": {
                                "en": "Pio: If you have any questions, feel free to ask me or the other users. Have fun!",
                                "de": "Pio: Wenn du Fragen hast, frag mich oder die anderen Benutzer. Viel Spaß!"
                            }
                        },
                        {
                            "type": "image",
                            "left": ""
                        },
                        {
                            "type": "flag",
                            "key": "communityBoardTutorialDone",
                            "validity": "Permanent",
                            "value": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "select",
            "showUI": true,
            "selectType": "Cards",
            "title": {
                "en": "Select a card for your deck",
                "de": "Wähle eine Karte für dein Deck"
            },
            "options": [
                {
                    "card": "communitySupport",
                    "cost": {},
                    "dialog": {
                        "type": "reward",
                        "rewards": [
                            {
                                "type": "card",
                                "card": "communitySupport"
                            }
                        ]
                    }
                },
                {
                    "type": "random",
                    "amount": 2,
                    "options": [
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "copyPaste",
                            "cost": 150
                        },
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "optimizeObjectTree",
                            "cost": 100
                        },
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "widgets",
                            "cost": 100
                        },
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "perfectBalance",
                            "cost": 150
                        },
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "adjustPresentation",
                            "cost": 100
                        },
                        {
                            "type": "file",
                            "file": "Options/CardPurchaseRepeat",
                            "card": "planAhead",
                            "cost": 100
                        }
                    ]
                },
                
                {
                    "type": "conditional",
                    "condition": {
                        "type": "not",
                        "condition": {
                            "type": "cardInDeck",
                            "card": "fullCustomization"
                        }
                    },
                    "options": {
                        "card": "fullCustomization",
                        "cost": {
                            "cash": 300
                        },
                        "dialog": [
                            {
                                "type": "reward",
                                "rewards": [
                                    {
                                        "type": "card",
                                        "card": "fullCustomization"
                                    }
                                ]
                            }
                        ]
                    }
                }
            ]
        }
        
    ]
}